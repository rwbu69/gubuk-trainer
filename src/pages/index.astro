---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-screen bg-[#2D4F2B] overflow-hidden relative">
    <!-- Navigation -->
    <nav class="container mx-auto px-6 py-6">
      <div class="flex items-center justify-between">
        <div
          class="text-white text-2xl font-bold tracking-wider animate-fade-in"
        >
          Gubuk Trainer
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <div class="container mx-auto px-6 py-20 md:py-32">
      <div
        id="welcome-screen"
        class="flex flex-col items-center justify-center min-h-[60vh]"
      >
        <h1
          class="text-5xl md:text-7xl font-bold text-[#E7EFC7] mb-8 animate-slide-up text-center"
        >
          Selamat datang di <span
            class="bg-[#B6F500] bg-clip-text text-transparent"
            >Gubuk Trainer</span
          > !
        </h1>
        <p
          class="text-2xl md:text-3xl text-gray-300 mb-12 animate-slide-up-delay text-center"
        >
          "Kalo kamu gabut bisa buka ini sob"
        </p>

        <!-- Button Container -->
        <div class="flex flex-col sm:flex-row items-center gap-6 animate-fade-in-slow">
          <!-- Tes Karbit Button -->
          <a
            href="/gubuk-trainer/pilih_server"
            class="px-10 py-5 bg-[#B6F500] text-[#2D4F2B] rounded-full font-bold text-2xl hover:shadow-2xl hover:scale-110 transition-all duration-300 inline-block"
          >
            Tes Karbit
          </a>

          <!-- Daftar Karakter Button -->
          <a
            href="/gubuk-trainer/pilih_server_character"
            class="px-10 py-5 bg-white/20 text-[#E7EFC7] border-2 border-[#B6F500] rounded-full font-bold text-2xl hover:bg-[#B6F500] hover:text-[#2D4F2B] hover:shadow-2xl hover:scale-110 transition-all duration-300 inline-block"
          >
            Trivia Karakter
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes blob {
    0%,
    100% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  .animate-fade-in-delay {
    animation: fade-in 1s ease-out 0.3s both;
  }

  .animate-fade-in-slow {
    animation: fade-in 1.5s ease-out 0.6s both;
  }

  .animate-slide-up {
    animation: slide-up 1s ease-out;
  }

  .animate-slide-up-delay {
    animation: slide-up 1s ease-out 0.3s both;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animate-bounce-horizontal {
    animation: bounce-horizontal 1.5s ease-in-out infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 2s ease-in-out infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
