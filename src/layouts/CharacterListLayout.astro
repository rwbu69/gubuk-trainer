---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  subtitle?: string;
  characters: any[];
  baseUrl: string;
}

const { title, subtitle, characters, baseUrl } = Astro.props;

// Sort characters by release date (newest first)
const sortedCharacters = [...characters].sort((a, b) => {
  const dateA = a.release_en ? new Date(a.release_en).getTime() : 0;
  const dateB = b.release_en ? new Date(b.release_en).getTime() : 0;
  return dateB - dateA;
});
---

<Layout>
  <div class="min-h-screen bg-[#2D4F2B] relative">
    <!-- Navigation -->
    <nav class="container mx-auto px-6 py-6">
      <div class="flex items-center justify-between">
        <a
          href="/gubuk-trainer/"
          class="text-white text-2xl font-bold tracking-wider hover:text-[#B6F500] transition-colors duration-300"
        >
          Gubuk Trainer
        </a>
      </div>
    </nav>

    <div class="container mx-auto px-6 py-10 pb-20">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-4xl md:text-5xl font-bold text-[#E7EFC7] mb-4 drop-shadow-lg">
            {title}
          </h1>
          {subtitle && (
            <p class="text-xl text-gray-300">
              {subtitle}
            </p>
          )}
        </div>

        <!-- Character List -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {
            sortedCharacters.map((char) => (
              <div class="bg-gradient-to-br from-white/15 to-white/5 backdrop-blur-lg rounded-2xl overflow-hidden shadow-2xl border border-white/20 hover:border-[#B6F500] transition-all duration-300">
                <div class="flex flex-col sm:flex-row">
                  <!-- Character Image -->
                  <div class="sm:w-40 flex-shrink-0">
                    <img
                      src={`${baseUrl}/images/character_hd/hd_${char.char_id}_${char.card_id}.png`}
                      alt={char.name_en}
                      class="w-full h-48 sm:h-full object-cover"
                    />
                  </div>

                  <!-- Character Info -->
                  <div class="flex-1 p-4">
                    <div class="flex items-start justify-between mb-2">
                      <div>
                        <h3 class="text-xl font-bold text-[#E7EFC7] mb-1">
                          {char.name_en}
                        </h3>
                        {(char.title_id || char.title) && (
                          <p class="text-sm text-[#B6F500] font-semibold">
                            {char.title_id || char.title}
                          </p>
                        )}
                      </div>
                      {char.rarity && (
                        <div class="bg-[#B6F500] text-[#2D4F2B] px-2 py-1 rounded-full font-bold text-xs shrink-0">
                          â˜…{char.rarity}
                        </div>
                      )}
                    </div>

                    {(char.tagline || char.tagline_id) && (
                      <p class="text-gray-300 text-sm italic mb-2 border-l-4 border-[#B6F500] pl-2">
                        "{char.tagline || char.tagline_id}"
                      </p>
                    )}

                    {(char.self_intro || char.self_intro_id) && (
                      <p class="text-gray-400 text-sm leading-relaxed line-clamp-3">
                        {char.self_intro || char.self_intro_id}
                      </p>
                    )}

                    {char.release_en && (
                      <div class="mt-3 pt-3 border-t border-white/10">
                        <p class="text-xs text-gray-500">
                          Released: <span class="text-gray-300">{char.release_en}</span>
                        </p>
                      </div>
                    )}
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Animated Background Elements -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden -z-10">
      <div
        class="absolute top-1/4 left-1/4 w-64 h-64 bg-[#B6F500]/20 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"
      >
      </div>
      <div
        class="absolute top-1/3 right-1/4 w-64 h-64 bg-[#9FD700]/20 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"
      >
      </div>
      <div
        class="absolute bottom-1/4 left-1/3 w-64 h-64 bg-[#7CB900]/20 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"
      >
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes blob {
    0%,
    100% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
